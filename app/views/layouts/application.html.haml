!!!
%html
  %head
    %meta{content: "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= content_for(:title) || "Blog"
    %meta{content: "width=device-width,initial-scale=1", name: "viewport"}/
    %meta{content: "yes", name: "apple-mobile-web-app-capable"}/
    = csrf_meta_tags
    = csp_meta_tag
    = yield :head
    %link{href: "/manifest.json", rel: "manifest"}/
    %link{href: "/icon.png", rel: "icon", type: "image/png"}/
    %link{href: "/icon.svg", rel: "icon", type: "image/svg+xml"}/
    %link{href: "/icon.png", rel: "apple-touch-icon"}/
    %link{href: "https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css", rel: "stylesheet"}/
    = stylesheet_link_tag "application", "data-turbo-track": "reload"
    = javascript_include_tag "application", "data-turbo-track": "reload", type: "module"
  %body.site
    %header.header
      .header__left
        - if !current_page?(root_path)
          = link_to :back, class: "header__back" do
            = image_tag 'back.svg', class: 'header_back'
        %p.header__title
          = link_to 'BlogApp', root_path, class: "header__brand"
      .header__right
        - if user_signed_in?
          .dropdown
            = image_tag current_user.avatar_image, class: 'header_avatar dropbtn'
            .dropdown-content
              = link_to 'プロフィール', profile_path, class: "dropdown__item"
              = link_to 'お気に入り', favorites_path, class: "dropdown__item"
              = link_to 'ログアウト', destroy_user_session_path, data: { turbo_method: 'delete' }, class: "dropdown__item danger"
        - else
          = link_to 'ログイン', new_user_session_path, class: 'header_loginBtn btn btn--primary'

    - if flash.present?
      .flash
        - flash.each do |key, value|
          %div{class: "flash__item flash__item--#{key}"}= value

    .page
      = yield

    = render 'layouts/footer'